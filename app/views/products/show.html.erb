<div class="row" id="product_show">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading product_image">
        <%= image_tag @product.image.url %>
      </div>
      
      <div class="panel-body">
        <h1>
          <%= @product.name %><br>

          <%= link_to "Ver Ofertas", product_biddings_path(:product_id => @product.id, :bidding_id => @bidding_id), :class => "ui-button" %>
        </h1><br>

        <h2>
        <% if is_cancellable? %>
         <%= link_to "Cancelar Subasta", product_path, method: :delete, data: { confirm: "¿Estas seguro?" } %>
        <% end %>
        </h2>

        <h3>Esta subasta finaliza el día: <%= @product.due_date.strftime("%d %b %Y") %></h3>
        <br>
        <p class="description">
          <%= @product.description %>
          <hr>
        </p>
        <p class="user">
          Subastado por
          <%= @product.user.name %>
        </p>
      </div>

      <div class="panel-footer">
        <div class="row">
          <%= render "biddings/form" %>
        </div>
      </div>

      <div class="panel-footer inquiries">
        <%= render 'inquiries/list' %>
      </div> 

    </div>
  </div>
</div>