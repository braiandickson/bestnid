<%= simple_form_for @product, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.input :image, label: 'Imagen:', required: true, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :name, label: 'Nombre del Producto:', required: true, :error_html => {:id => "name_prod_error"} , input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :description, label: 'Descripción del Producto:', input_html: { class: 'form-control' } %>
    <%= f.input :period, label: 'Duración de la subasta en días:', required: true, prompt: '15', collection: 15..30, default: 15%>
  </div>
  <%= f.button :submit, 'Crear Subasta', { class: "btn btn-primary" }%>
  <%= link_to "Cancelar", root_path, class: "btn btn-primary" %>
<% end %>