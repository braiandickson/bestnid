<h1>Mis Subastas</h1>
<% if @products.any? %>
	<% @products.each do | p | %>
		<h3><%= link_to p.name, p %></h3>
		<%= link_to (image_tag p.image.url), p %>
		<% if p.state == "active" %>
			<h4>Subasta activa</h4>
		<% else %>
			<h4>Subasta finalizada</h4>
		<% end %>
		<br>
	<% end %>
<% else %>
	<h2>Usted no tiene subastas creadas.</h2>
<% end %>