<div class="header">
	<h2> Usuarios Registrados </h2>
</div>

<hr>
<div class="body">
	<div class="search">
		<%= form_tag(created_accounts_index_path, method: :get) do %>
			<%= label_tag(:date_from, "Desde") %>
			<%= date_field(:search_dates, :date_from, value: params[:date_from], required: true) %>
			<%= label_tag(:date_to, "Hasta") %>
			<%= date_field(:search_dates, :date_to, value: params[:date_to], required: true) %>
			<%= submit_tag "Obtener Reporte"%>
		<% end %>
	</div>

<hr>
	
	<div class="header">
		<h3>Total de usuarios encontrados: <%= @created_accounts.size %></h3>
	</div>
	<br>
	<div class="list">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Nombre:</th>
					<th>Email:</th>
					<th>Fecha de registro:</th>
				</tr>
			</thead>
			<% @created_accounts.each do | account | %>
				<tr>
					<td><%= account.name %></td>
					<td><%= account.email %></td>
					<td><%= account.registration_date.strftime('%d - %m - %Y') %></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>
<hr>

<div class="footer">
	
</div>
