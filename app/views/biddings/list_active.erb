<br><br><br>
<div id="biddings">

<% if @biddings_to_list.any? %>
	<% @biddings_to_list.each do |bidding| %>
		
		<div class="bidding">
			<%= bidding.product.name %><br>
			Subastado por <%= bidding.product.user ? bidding.product.user.name : "Usuario cancelado" %><br>
			Monto ofrecido por t√≠: $<%= bidding.amount %><br>

			<%= link_to ( image_tag bidding.product.image.url ), bidding.product %>
		<p>Tu motivo: <%= bidding.reason %></p>
		<% if bidding.product.has_winner? %>
			<p style= "color: red;">El subastador ya ha elegido ganador.</h3>
		<% else %>			
		  	<h3>Editar monto de la oferta</h3>
			  <%= simple_form_for ([@product, bidding])  do |f| %>
			    <div class="form-group">
			      <%= f.input :amount, label: 'Nuevo monto:', placeholder: "Ingrese un monto para el producto.", required: true, input_html: { class: 'form-control' } %>
			    </div>
			    <%= f.button :submit, 'Guardar', { class: "btn btn-primary" }%>
			  <% end %>
		<% end %>

		</div>
		</div>

	<% end %>
	<% else %>
		<h2><%= "Usted no tiene ofertas" %></h2>
	<% end %>
</div>