<div id="biddings">
	<% @biddings.each do |bidding| %>
		<div class="bidding">
			<h2 class="user">
				<%= bidding.user.email %>
			</h2>
				<%= link_to 'Seleccionar como ganador', product_bidding_path(bidding.id, bidding.product.id), :method => :put %>

			<p class="reason">
				<%= bidding.reason %>
			</p>
			<hr>
		</div>
	<% end %>
</div>