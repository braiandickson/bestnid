<div class="col-md-6 col-md-offset-3">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2>Iniciar sesión</h2>
			</div>
			<div class="panel-body">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<% if flash[:alert] %>
					<div class="alert alert-danger" role="alert">
						<%= flash[:alert] %>
					</div>
					<% end %>
					<div class="form-inputs">
						<div class="form-group">
				  			<%= f.input :email, label: "Correo electronico:", placeholder: "Escriba su correo electronico.",required: true, autofocus: true, input_html: { class: 'form-control' } %>
				  		</div>
				  		<div class="form-group">
					    	<%= f.input :password, label: "Contraseña:", placeholder: "Ocho caracteres como minimo.", autocomplete: "off", required: true, input_html: { class: 'form-control' } %>
					    </div>
						<div class="form-group">
					   		<%= f.input :remember_me, label: "Recordar sesion", as: :boolean if devise_mapping.rememberable? %>
					    </div>
					<div class="form-actions">
						<%= f.submit "Iniciar Sesion", class: "btn btn-primary" %>
						<%= link_to "Cancelar", root_path, class: "btn btn-primary" %>
					</div>
			  	<% end %>
			</div>
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>